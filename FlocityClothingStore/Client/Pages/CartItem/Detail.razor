@page "/category/{CategoryId:int}"
@using FlocityClothingStore.Shared.Models.Category
@inject HttpClient http

<h3>Category #CategoryId</h3>
@if(Category !=null)
{
    <div class="container">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <span>Category #Category.Id</span>
            </div>
            <div class="card-body">
                <h4 class="card-category">CategoryName</h4>
            </div>
            </div>
        <div class="de-flex justify-content-center mt-3">
            <div class="text-center justify-content-between w-25">
                <a href=@($"/category/edit/{CategoryId}") class="btn btn-outline-primary">Edit</a>
                <a href=@($"/category/delete/{CategoryId}") class="btn btn-outline-danger">Delete</a>
                <hr />
                <a href="/category">Back to Category Index</a>
            </div>
        </div>
    </div>


}
else
{
    <p><em>Loading...</em></p>
}



@code {
    [Parameter]
    public int CategoryId { get; set; }
    public CategoryDetail Category { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Category = await http.GetFromJsonAsync<CategoryDetail>($"/api/category/{CategoryId}");
    }

}
